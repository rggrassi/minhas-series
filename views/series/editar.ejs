<% include ../partials/header %>   
    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Editar série</h2>
            <form method="POST">
                <div class="form-group">
                    <label for="name">Nome: </label>
                    <input value="<%= serie.name %>" type="text" id="name" name="name" class="form-control"> 
                    <% if(errors && errors.indexOf('name') >= 0) { %>
                        <small class="form-text text-muted">
                            Por favor, informe o nome da série
                        </small>
                    <% } %>    
                </div>
                <div class="form-group">
                    <label for="status">Situação: </label>
                    <select name="status" id="status" class="form-control">
                        <% labels.forEach(label => { %>                            
                            <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected" <% } %>><%= label.value %></option>
                        <% }) %>
                    </select>
                </div>    
                <button class="btn btn-primary">Salvar</button>
            </form>    
          </div>
        </div>
      </div>
    </section>
<% include ../partials/footer %>